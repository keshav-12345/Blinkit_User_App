<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/yellow"
    tools:context=".auth.SplashFragment">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:orientation="vertical"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:gravity="center">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="91.00dp"
                 android:text="blinkit"
                 android:textColor="#000000"
                 android:textSize="78.00sp"
                 android:textStyle="bold" />
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="91.00dp"
                 android:text="it"
                 android:textColor="@color/green"
                 android:textSize="78.00sp"
                 android:textStyle="bold" />
         </LinearLayout>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="India's last minute app"
             android:textSize="19.50sp"
             android:textColor="#000000"/>
         <View
             android:layout_width="234dp"
             android:layout_height="2.60dp"
             android:layout_weight="3"
             android:background="#787777"
             android:layout_marginTop="26.00dp"/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="A ZOMATO COMPANY"
             android:letterSpacing="0.1"
             android:textSize="10.40sp"
             android:textColor="#000000"
             android:layout_marginTop="26dp"
             android:textStyle="bold"/>

     </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>